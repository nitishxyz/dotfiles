// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run zed: open default settings from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	// "minimap": {
	//   "show": "auto"
	// },
	"session": {
  "trust_all_worktrees": true
 },
 "telemetry": {
  "diagnostics": true,
  "metrics": false
 },
 "base_keymap": "VSCode",
 "inlay_hints": {
		"enabled": false,
		"show_value_hints": true,
		"show_type_hints": true,
		"show_parameter_hints": true,
		"show_other_hints": true,
		"show_background": false,
		"edit_debounce_ms": 700,
		"scroll_debounce_ms": 50,
		"toggle_on_modifiers_press": {
			"control": false,
			"alt": false,
			"shift": false,
			"platform": false,
			"function": false
		}
	},
	"features": {
		"edit_prediction_provider": "zed"
	},
	"agent": {
		"always_allow_tool_actions": true,
		"default_profile": "write",
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-sonnet-4"
		}
	},
	"format_on_save": "on",
	"show_edit_predictions": true,
	"ui_font_size": 16,
	"buffer_font_size": 15,
	"theme": {
		"mode": "system",
		"light": "One Light",
		"dark": "Ayu Dark"
	},
	"ui_font_family": "BerkeleyMono Nerd Font Mono",
	"buffer_font_family": "BerkeleyMono Nerd Font Mono",
	"terminal": {
		"font_family": "BerkeleyMono Nerd Font Mono",
		"font_size": 15
	},
	"project_panel": {
		"dock": "right"
	},
	"vim": {
		"toggle_relative_line_numbers": true
	},
	"vim_mode": true,
	"lsp": {
		"biome": {
			"settings": {
				"require_config_file": true
			}
		}
	},
	"languages": {
		"JavaScript": { "formatter": { "language_server": { "name": "biome" } } },
		"TypeScript": { "formatter": { "language_server": { "name": "biome" } } },
		"TSX": { "formatter": { "language_server": { "name": "biome" } } },
		"JSON": { "formatter": { "language_server": { "name": "biome" } } },
		"JSONC": { "formatter": { "language_server": { "name": "biome" } } },
		"CSS": { "formatter": { "language_server": { "name": "biome" } } }
		// "GraphQL": { "formatter": { "language_server": { "name": "biome" } } }
	},

	"code_actions_on_format": {
		"source.organizeImports.biome": true,
		"source.fixAll.biome": true
	}
}
